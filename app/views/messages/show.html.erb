
<p>
  <strong>Content:</strong>
  <%= @message.content %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @message.image.url %>
</p>

<% unless @message.user_id == current_user.id %>
<% if @favorite.present? %>
<%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
<% else %>
<%= link_to 'お気に入りする', favorites_path(message_id: @message.id), method: :post, class: 'btn btn-primary' %>
<% end %>
<% end %>
<% if @message.user.id == current_user.id %>
<%= link_to 'Edit', edit_message_path(@message), class:"btn btn-default" %>
<%= link_to 'Destroy', @message, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default" %>
<% end %>
<%= link_to 'Back', messages_path, class:"btn btn-default" %>